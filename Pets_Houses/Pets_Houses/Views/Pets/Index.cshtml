@{
    var PetsInfo = (List<PetModel>)ViewData["PetsInfo"];

    <br />
    <h2 style="font-weight:bold; color:darkslategrey; font-size:40px;" class="text-center">Pets for adoption</h2>
    <hr />
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Type</th>
                <th scope="col">Gender</th>
                <th scope="col">Details</th>
                <th scope="col">Contact Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Pet in PetsInfo)
            {
            <tr>
                
                <td><img style="width:100px;height:100px;" src="@Pet.Image" /></td>
                <td>@Pet.Type</td>
                <td>@Pet.Gender</td>
                <td>@Pet.Details</td>
                <td>@Pet.ContactNo</td>
            </tr>
            }
        </tbody>
    </table>
}
